@model My_Pharma_DB.Domain.Medicine

@{
    ViewBag.Title = "DeleteMedicine";
}

<h2>DeleteMedicine</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Medicine</h4>
        <hr />
        @Html.HiddenFor(model => model.MedicineID)
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Medicine Name")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MedicineName)
            </dd>

            <dt>
                @Html.DisplayName("Medicine Description")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MedicineDescription)
            </dd>

            <dt>
                @Html.DisplayName("Quantity")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MediQty)
            </dd>

            <dt>
                @Html.DisplayName("Expiry Date")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MediExpiryDate)
            </dd>
        </dl>

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "MedicineList")
        </div>
    </div>
}
